<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pk.getsub.www.getsub.map.UserProfileUpdateActivity">

    <include
        layout="@layout/order_toolbar"
        android:id="@+id/include_user_profile_update_activity" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/img_user_profile_update_detail"
        android:src="@drawable/cnt1"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/include_user_profile_update_activity"
        android:layout_marginLeft="105dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/img_user_profile_update_detail">

        <EditText
            android:id="@+id/edit_name_user_profile_update_activity"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:padding="16dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/textInputLayout4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">
        <EditText
            android:id="@+id/edit_phone_user_profile_update_activity"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="phone"
            android:padding="16dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/textInputLayout5"
        android:layout_marginTop="85dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">
        <EditText
            android:id="@+id/edit_address_user_profile_update_activity"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:padding="16dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_update_user_profile_detail_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/custom_bg"
        android:padding="16dp"
        android:elevation="6dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>