<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pk.getsub.www.getsub.map.UserProfileDetailActivity">

    <include
        layout="@layout/order_toolbar"
        android:id="@+id/include_user_profile_detail_activity"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/img_user_profile_detail"
        android:src="@drawable/cnt1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/include_user_profile_detail_activity" />

    <TextView
        android:id="@+id/txt_name_user_profile_detail_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        android:text="Name"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/img_user_profile_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_user_profile_detail_activity"
        app:layout_constraintRight_toRightOf="parent"
         />
    <TextView
        android:id="@+id/txt_phone_user_profile_detail_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        android:text="Phone"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_user_profile_detail_activity"
        app:layout_constraintHorizontal_bias="0.529" />

    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/txt_phone_user_profile_detail_activity"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/txt_address_user_profile_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        android:text="Address"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_phone_user_profile_detail_activity"
        app:layout_constraintHorizontal_bias="0.538" />
    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/txt_address_user_profile_activity"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_update_user_profile_detail_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/custom_bg"
        android:padding="16dp"
        android:elevation="6dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp" />

</android.support.constraint.ConstraintLayout>